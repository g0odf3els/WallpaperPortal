@model WallpaperPortal.ViewModels.CreateUserViewModel
@{
    ViewBag.Title = "Adding a user";
}

<div class="container flex-row justify-content-center align-items-center">
    <form class="form" method="post" asp-controller="Users" asp-action="Create">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-block">
            <div>
                <label asp-for="Username"></label><br />
                <input asp-for="Username" />
            </div>
            <span asp-validation-for="Username"></span>
        </div>
        <div class="form-block">
            <div>
                <label asp-for="Email"></label><br />
                <input asp-for="Email" />
            </div>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-block">
            <div>
                <label asp-for="Password"></label><br />
                <input asp-for="Password" />
            </div>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-block">
            <button class="animated-btn" type="submit">
                Add
            </button>
        </div>
    </form>
</div>