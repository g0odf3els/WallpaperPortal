@model IEnumerable<WallpaperPortal.Models.User>
@{
    ViewBag.Title = "Users";
}

<div class="container flex-column">

    <div class="flex-row justify-content-center mt-10 mx-5">
        <form class="searchbar-form" asp-controller="Users" asp-action="Index" method="get">
            <input type="text" name="username" placeholder="Search..." />
            <button style="border-color: white" class="animated-btn" type="submit">Search</button>
        </form>
    </div>

    <div class="mt-10 mx-5">
        <table class="table">
            <tr>
                <th>Email</th>
                <th>Username</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.UserName</td>
                    <td>
                        <form asp-action="Edit" asp-route-id="@user.Id" method="get">
                            <button type="submit" class="animated-btn">
                                Edit
                            </button>
                        </form>
                    </td>
                    <td>
                        <form asp-controller="Roles" asp-action="Edit" asp-route-Id="@user.Id" method="get">
                            <button type="submit" class="animated-btn">
                                Access rights
                            </button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                            <button type="submit" class="animated-btn">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="mt-10 mx-5">
        <form asp-action="Create" method="get">
            <button type="submit" class="animated-btn">
                Create
            </button>
        </form>
    </div>
</div>
