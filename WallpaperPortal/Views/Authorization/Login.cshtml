@model WallpaperPortal.ViewModels.LoginViewModel

<div class="container flex-row justify-content-center align-items-center">
    <form class="form" method="post" asp-controller="Authorization" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly"></div>

        <h1 class="form__header">Login</h1>

        <div class="form__block">
            <label asp-for="Username"></label><br />
            <input asp-for="Username" />
            <span asp-validation-for="Username"></span>
        </div>

        <div class="form__block">
            <label asp-for="Password"></label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form__block">
            <div class="remember-div">
                <input asp-for="RememberMe" />
                <label asp-for="RememberMe"></label><br />
            </div>
        </div>

        <div class="form__block">
            <button class="animated-btn" type="submit">
                <div class="flex-row justify-content-space-between align-items-center">
                    <span>Login</span>
                    <span class="material-symbols-outlined">login</span>
                </div>
            </button>
        </div>

        <div class="form__block">
            <div>
                <a asp-controller="Authorization" asp-action="Register">Need an account?</a>
            </div>
            <div>
                <a asp-controller="Authorization" asp-action="ForgotPassword">Forgot password?</a>
            </div>
        </div>

    </form>
</div>